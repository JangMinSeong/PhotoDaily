<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/travel_map_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/travel_map_image" />

        <ImageView
            android:id="@+id/travel_gyeongsan_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:src="@drawable/travel_gyeongsan_icon"
            android:scaleType="fitCenter"
            app:tint="@color/lite_blue" />

        <ImageView
            android:id="@+id/travel_daegu_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:src="@drawable/travel_daegu_icon"
            android:scaleType="fitCenter"
            app:tint="@color/black" />


</FrameLayout>